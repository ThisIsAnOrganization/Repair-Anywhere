@model RepairAnywhere.Models.RepairmanViewModel.ActiveRepairViewModel
	<div class="panel panel-primary ">
                        <div class="panel-heading ">
                            Detailed Service
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
	
					<table width="100%">
									<tr>
									<td width="50%">
										<h4>Details</h4>
										<p>Category: @Model.request.Category<br />
                                            Problem Description: @Model.request.Description<br />
										Location: @Model.request.Address<br/>
                                            Date of Request: @Model.request.Date 
			
										Point: <br/>
										<br/>
										**For more detailed information, please call: 01913531384, 01913531517, 01977885507, 01914602965, 01939912533, 01937402947
										<br/>â€¢ Call us within 10 am to 4 pm from Sunday to Thursday<br/><br/><br/>
										
										<b>Status: @Model.request.Status<br/>
									Service Charge: @{ if (@Model.request.Cost==0)
                         {
                             @:Not yet set <br />
                                            using (Html.BeginForm("activerepair", "Repairman",new { id=@Model.request.RequestID}, FormMethod.Post))
        {	
                                            <input class="rounded" name="cost" />
                                                <button type="submit" class="btn btn-primary" >Set Fare</button>
                                            }
                         }
                                            else{ @Model.request.Cost }}
										</b></p>
									</td>
									<td>
										<img class="rounded" width="70%" src="../img/p5.jpg"/>
									</td>
									</tr>
									</table>
                            <hr />
                            <table>
										<tr>
											<td width="30%">
											<img class="rounded-circle" width="70%" src="../images/user_pic.jpg"/>
											</td>
											<td style="text-align:center">
												<table width="100%">
													<tr>
														<td  style="text-align:center" width="40%">
															<h4>Customer: @Model.customer.Name</h4>
														</td>
													</tr>
													<tr>
														
														<td style="text-align:center">
															Contact No: @Model.customer.PhoneNumber
														</td>
													</tr>
												</table>
											</td>
											<td>
											</td>
										</tr>
									</table>
           
                        </div>
						<div class="panel-footer">
						<a href="@Url.Action("completeRequest", "Repairman", new { id = @Model.request.RequestID })"><button class="btn btn-primary" >End Service</button></a>
						</div>
                        <!-- /.panel-body -->
                    </div>
			
