@model RepairAnywhere.Models.RepairmanViewModel.ChangePasswordViewModel
	
			<div class="row">
            <div class="col-lg-12">
                    <h2 class="page-header">Change Password</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
			
			<div class="row">
            <div class="col-md-8">
			
           @using (Html.BeginForm("changePassword", "Repairman", FormMethod.Post))
                                        {	
				<div class="form-label-group">
			  <label for="inputUserame">Old Password</label>
                <input type="password" name="oldPass" id="inputName" class="form-control" placeholder="Old Password" value="" required >
                    @if (@Model.flag==10)
                                        {
                                            <p style="color:green">*Changed</p><br />
                                        }
                
              </div>
              <div class="form-label-group">
			  <label for="inputUserame">New Password</label>
                <input type="password"  name="newPass" id="inputName" class="form-control" placeholder="New Password" value="" required >
                  @if (@Model.flag==1)
                                        {
                                            <br /><p style="color:red">*Incorrect</p>
                                        }
                
              </div>

          
          

              <div class="form-label-group">
			         <label for="inputPassword">Retype Password</label>
                <input type="password" id="inputPassword" name="rePass" class="form-control" placeholder="Retype Password" value="" required>
                  @if (@Model.flag==2)
                                        {
                                            <br /><p style="color:red">*Password doesn't match</p>
                                        }
         
              </div>
              
             
			 
          
              <hr class="my-4">
              
			  <br/><button class="btn btn-success btn-lg btn-block text-uppercase" type="submit">Save Changes</button>
           }
			</div>

			
            </div>
			
			
