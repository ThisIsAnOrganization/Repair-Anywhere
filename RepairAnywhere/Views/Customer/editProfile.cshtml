@model RepairAnywhere.Models.CustomerViewModel.EditProfileViewModel

    <div class="container-fluid">
      <!-- Breadcrumbs
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="index.html">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Blank Page</li>
      </ol>
	  -->
        @using (Html.BeginForm("editProfile", "Customer", FormMethod.Post))
                                        {
      <div class="row">
        <div class="col-8">
          <table class="table table-striped" style="width: 80%">
            <tr>
              <td width="40%">Name</td>
              <td class="text-justify"><input type="text" name="name" value="@Model.customer.Name"/></td>
            </tr>
            <tr >
              <td width="40%">Email</td>
              <td class="text-justify">@Model.customer.Email</td>
            </tr>
            <tr >
              <td width="40%">Address</td>
              <td>
                <textarea id="Address" name="address" style="height:100px;width:300px">@Model.customer.Address</textarea>
              </td>
            </tr>
            <tr >
              <td width="40%">Phone number</td>
              <td class="text-justify"><input type="text" name="phone" value="@Model.customer.PhoneNumber"/></td>
            </tr>
          </table>
        </div>
        <div class="col-4"  style="padding-right: 100px">
           <img src="../images/user_pic.jpg" class="img-thumbnail" alt="Cinque Terre" style="width:100%">
        </div>
     </div>
	 <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
        
    
    
