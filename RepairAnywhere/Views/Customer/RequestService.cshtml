	@using (Html.BeginForm("RequestService", "Customer", FormMethod.Post))
        {	
    <table  style="padding-left:20px" width="100%">
		
		<tr>
		    <td>
			<div class="dropdown">
			  <label >
				Category
			  </label>
                  <select class="btn btn-outline-secondary" name="category" >
                      <option value="none"></option>
                      <option value="Engine" @if(@Model.category=="Engine")
                                             { 
                                                 @:selected 
                                             }>Engine</option>
                      <option  value="Interior" @if(@Model.category=="Interior")
                                                { 
                                                    @:selected 
                                                    }>Interior</option>
                      <option value="Exterior" @if (@Model.category == "Exterior")
                                                { 
                                                    @:selected 
                                                    }>Exterior</option>
                    </select>
                @if (@Model.flag==1)
                {
                    <br /><p style="color:red">*Category Required</p>
                }
			</div>
		    </td>
            <td style="text-align:center" colspan="2">
				<label >Location:</label><input class="rounded" name="address" @if (@Model.address != "") 
                                                                   { 
                                                                       @:value="@Model.address" 
                                                                       } width="276" />
                @if (@Model.flag==3)
                {
                    <br /><p style="color:red">*Location Required</p>
                }<br/>
				  <br/>
			</td>
            <td><label>Problem Defination</label><br/>
			<textarea name="prob" style="width:100%;height:100px" class="rounded">@if (@Model.prob != "")
                                                { 
                                                    @Model.prob 
                                                    }</textarea><br/> 
                @if (@Model.flag==2)
                {
                    <br /><p style="color:red">*Problem Defination Required</p>
                }<br/><br/><br/>
            </td>

		</tr>
		
	</table>
	<br/>
	@*<div id="map" style="width:100%;height:400px;"></div>*@<br/><br/>
	<table  width="100%">
	<tr>
	<td style="text-align:center">
	<button  type="submit" class="btn btn-outline-primary" data-toggle="modal" data-target="#successfulModal">Request</button>
	</td>
	</tr>
	</table>
 }

