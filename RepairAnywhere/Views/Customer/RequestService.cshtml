	@using (Html.BeginForm("RequestService", "Customer", FormMethod.Post))
 {	
    <table  style="padding-left:20px" width="100%">
		
		<tr>
		    <td>
			<div class="dropdown">
			  <label >
				Category
			  </label>
                  <select class="btn btn-outline-secondary" name="category" >
                      <option value="none"></option>
                      <option value="Engine" @if ((@Model.category == "Engine")||((@Model.flag1 >0)&&(@Model.request.Category=="Engine")))
                                             { 
                                                 @:selected 
                                             }>Engine</option>
                      <option  value="Interior" @if ((@Model.category == "Interior") || ((@Model.flag1 > 0) && (@Model.request.Category == "Interior")))
                                                { 
                                                    @:selected 
                                                    }>Interior</option>
                      <option value="Exterior" @if ((@Model.category == "Exterior") || ((@Model.flag1 > 0) && (@Model.request.Category == "Exterior")))
                                               { 
                                                    @:selected 
                                                    }>Exterior</option>
                    </select>
                @if (@Model.flag == 1)
                {
                    <br /><p style="color:red">*Category Required</p>
                }
			</div>
		    </td>
            </tr>
            <tr>
            <td colspan="2"><br /><br />
				<label >Location:</label><input class="rounded"  name="address" @{ if (@Model.flag1>0)
                                                                   { 
                                                                       @:value="@Model.request.Address" 
                                                                       } 
                                                                       else if(@Model.address != ""){
                                                                       @:value="@Model.address"
                                                                       }}
                    width="276" />
                @if (@Model.flag == 3)
                {
                    <br /><p style="color:red">*Location Required</p>
                }<br/>
				  <br/>
			</td>
                </tr>
            <tr>
            <td><label>Problem Defination</label><br/>
			<textarea name="prob" style="width:100%;height:100px" class="rounded">@{ if (@Model.flag1>0)
                                                                   { 
                                                                       @Model.request.Description 
                                                                       }
                                                                            else if (@Model.prob != "")
                                                                            {
                                                                        @Model.prob 
                                                                       }}</textarea><br/> 
                @if (@Model.flag == 2)
                {
                    <br /><p style="color:red">*Problem Defination Required</p>
                }
                <br/><br/><br/>
            </td>

		</tr>
		
	</table>
     <input name="flag1" value="@Model.flag1" hidden />
	<br/>
	@*<div id="map" style="width:100%;height:400px;"></div>*@<br/><br/>
	<table  width="100%">
	<tr>
	<td style="text-align:center">
	<button  type="submit" class="btn btn-outline-primary" data-toggle="modal" data-target="#successfulModal">Request</button>
	</td>
	</tr>
	</table>
 }

