@model RepairAnywhere.Models.AdminViewModel.EditProfileViewModel

<style>
.checked {
    color: orange;
}
</style>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit Profile</h1>
        
    </div>
</div>


            <!-- /.row -->
<div class="row">
    <div class="col-sm-6" align="center">  
        @using (Html.BeginForm("editprofile", "Admin", FormMethod.Post))
                                        {
        <table class="table table-striped" style="width: 80%">
            <tr>
              <td width="40%">Name</td>
              <td class="text-justify"><input type="text" name="Name" value="@Model.admin.Name"/></td>
            </tr>
            <tr >
              <td width="40%">Email</td>
              <td class="text-justify">useremail@gmail.com</td>
            </tr>
            <tr >
              <td width="40%">Phone number</td>
              <td class="text-justify"><input type="text" name="Phone" value="@Model.admin.PhoneNumber"/></td>
            </tr>
          </table>
		  <button type="submit" class="btn btn-primary">Save Changes</button>
        }
    </div>
    <div class="col-sm-4" style="color: blue;">
        <div class="row" align="center" >
            <img src="~/Styles/Admin/img/c.jpg" class="img-circle" alt="Cinque Terre" style="width: 70%">


        </div>
		
    </div>
    </div>

  
    


