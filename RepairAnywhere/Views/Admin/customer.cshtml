@model RepairAnywhere.Models.AdminViewModel.CustomerViewModel


@using (Html.BeginForm("customer", "Admin", FormMethod.Post))
{
    <br />
    <input name="name" />
    <button type="submit" class="btn btn-secondary">Search</button>

}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Customer</h1>
    </div>
</div>
        <!-- /.row -->
<div class="row" >
  
  @foreach (var item in @Model.customers)
  {
      <div class="col-sm-3">
    <div class="row" align="center">
        <img src="~/Styles/Admin/img/c.jpg" class="img-circle" alt="Cinque Terre" style="width: 70%;" >
    </div>
      <div class="row" align="center">
        <label>@item.Name</label>
    </div>
    <div class="row" align="center">
        <a href="@Url.Action("viewprofilecustomer", "Admin", new { id=@item.CustomerID})"><button type="button" class="btn btn-success">View Profile</button></a>
    </div>
  </div>
  }

  
</div>



