@model RepairAnywhere.Models.AdminViewModel.ChangePasswordViewModel

<style>
.checked {
    color: orange;
}
</style>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Change Password</h1>
        
    </div>
</div>


            <!-- /.row -->
<div class="row">
    <div class="col-sm-6" align="center">  

         @using (Html.BeginForm("changepassword", "Admin", FormMethod.Post))
                                        {	
                
          <table class="table table-striped" style="width: 80%">
            <tr>
              <td width="40%" style="color: red"><b>Old Password</b>
                  @if (@Model.flag==10)
                                        {
                                            <p style="color:green">*Changed</p><br />
                                        }
              </td>
              <td class="text-justify"><input type="password" name="oldPass" id="oldPass" required />
                @if (@Model.flag==1)
                                        {
                                            <br /><p style="color:red">*Incorrect</p>
                                        }
                  </td>
                
            </tr>
            
           
            <tr>
              <td width="40%" style="color: green"><b>New Password</b></td>
              <td class="text-justify"><input type="password" name="newPass" id="newPass" required /></td>
            </tr>

            <tr>
              <td width="40%" style="color: blue"><b>Retype Password</b></td>
              <td class="text-justify"><input type="password" name="rePass" id="rePass" required />
                @if (@Model.flag==2)
                                        {
                                            <br /><p style="color:red">*Password doesn't match</p>
                                        }
                  </td>
            </tr>
		
          </table>
		  <button type="submit" class="btn btn-primary">Submit</button>
            }

    </div>
    <div class="col-sm-4" style="color: blue;">
        <div class="row" align="center" >
            <img src="~/Styles/Admin/img/c.jpg" class="img-circle" alt="Cinque Terre" style="width: 70%">


        </div>
    </div>
    </div>

  
    


