@model RepairAnywhere.Models.AdminViewModel.RepairmanReviewViewModel


<div class="row">
            <div class="col-lg-12">
                    <h2 class="page-header">Repairman Reviews</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
<table class="table table-primary table-striped">
                            
                             <tr>
                                 <th>Customer</th>
                                 <th>Rating</th>
                                 <th>Comment</th>
                             </tr>
    
                            @{int c = 0;}
                            @foreach (var item in @Model.reviews)
                            {
                                
                                <tr style="cursor:pointer" onclick="window.location='@Url.Action("viewprofilecustomer", "Admin", new { id = @item.CustomerID })';" >
								<td width="10%"><img src="~/Styles/Customer/images/user_pic.jpg" style="width:100%" class="rounded-circle"> <b>@Model.customers[c].Name</b></td>
								<td width="10%">@for (int i = 0; i < @item.Rating; i++)
                                                                    {
                                                                        <i class="fa fa-star" style="font-size: 20px;color:orange"></i>
                                                                    }
                                                                
                                                                    @for (double i = @item.Rating; i < 5; i++)
                                                                    {
                                                                        <i class="fa fa-star" style="font-size: 20px;color:black"></i>
                                                                    }</td>
                                    <td class="text-justify">@item.Comment</td>
                                    
							</tr>
                           
                                c++;
                            }
							
						</table>